<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pwc.agro.sentinal.dao.PriceListDAO">
    <select id="listFoodType" resultType="java.lang.String" >
        select distinct food_type from price_list
    </select>

    <select id="findByFood" resultType="com.pwc.agro.sentinal.dto.PriceList" >
        select * from price_list pr
        where 1=1
        <if test="food != null and food != ''">
            and pr.food_type = #{food}
        </if>

    </select>
</mapper>
