<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pwc.agro.sentinal.dao.PriceDAO">
    <select id="listFoodType" resultType="java.lang.String" >
        select distinct food_type from price
    </select>
    <select id="listCountry" resultType="java.lang.String" >
        select distinct country from price
    </select>
    <select id="findByCountryAndFood" resultType="com.pwc.agro.sentinal.dto.Price" >
        select * from price pr
        where 1=1
        <if test="food != null and food != ''">
            and pr.food_type = #{food}
        </if>
        <if test="country != null and country != ''">
        and pr.country = #{country}
        </if>

    </select>
</mapper>
