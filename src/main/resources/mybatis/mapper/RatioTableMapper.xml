<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pwc.agro.sentinal.dao.RatioTableDAO">
    <select id="listCountry" resultType="java.lang.String" >
        select distinct country from ratio
    </select>

    <select id="findByCountry" resultType="com.pwc.agro.sentinal.dto.RatioTable" >
        select * from ratio ra
        where 1=1
        <if test="country != null and country != ''">
            and ra.country = #{country}
        </if>
    </select>
</mapper>
